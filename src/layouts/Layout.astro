---
import NavBar from '../components/NavBar.astro'
const { title, pageName } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/assets/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Traveling to the visitor space is already a reality" />
    <title>{title}</title>
  </head>
  <body class={pageName}>
    <NavBar />
    <slot />
    <style lang="scss" is:global>
      @use '../scss/mixins' as *;

      @include bg-image(home);
      @include bg-image(crew);
      @include bg-image(destination);
      @include bg-image(technology);

      @font-face {
        font-family: 'Barlow';
        src: url('/fonts/Barlow.woff') format('woff');
      }
      @font-face {
        font-family: 'BarlowCondensed';
        src: url('/fonts/BarlowCondensed.woff') format('woff');
      }
      @font-face {
        font-family: 'Bellefair';
        src: url('/fonts/Bellefair.woff') format('woff');
      }

      *,
      *::after,
      *::before {
        box-sizing: border-box;
      }
      body,
      ul,
      h1,
      h2,
      h3,
      h4,
      h5,
      h6,
      p {
        margin: 0;
        color: hsla(0, 0%, 100%, 1);
        font-family: Barlow;
      }

      body {
        margin: 0;
        min-height: 100vh;
        width: 100vw;
      }

      ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      img {
        max-width: 100%;
        display: block;
      }
      a {
        text-decoration: none;
        color: inherit;
      }
    </style>
  </body>
</html>
